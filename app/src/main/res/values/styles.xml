<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- yellow -->
        <item name="colorPrimary">@color/colorPrimary_yellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_yellow</item>
        <item name="colorAccent">@color/colorAccent_yellow</item>
        <item name="android:navigationBarColor">@color/colorPrimary_yellow</item>
    </style>

    <style name="AppOverlayYellow" parent="AppTheme">
        <!-- yellow -->
        <item name="colorPrimary">@color/colorPrimary_yellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_yellow</item>
        <item name="colorAccent">@color/colorAccent_yellow</item>
        <item name="android:navigationBarColor">@color/colorPrimary_yellow</item>
    </style>

    <!-- red -->
    <style name="AppOverlayRed" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_red</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_red</item>
        <item name="colorAccent">@color/colorAccent_red</item>
        <item name="android:navigationBarColor">@color/colorPrimary_red</item>
    </style>

    <!-- blue -->
    <style name="AppOverlayBlue" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_blue</item>
        <item name="colorAccent">@color/colorAccent_blue</item>
        <item name="android:navigationBarColor">@color/colorPrimary_blue</item>
    </style>

</resources>